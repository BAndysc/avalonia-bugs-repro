<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avaloniaBugs="clr-namespace:AvaloniaBugs"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaBugs.MainWindow"
        x:DataType="avaloniaBugs:MainWindow"
        Title="AvaloniaBugs">
  <Window.Styles>
    <Style Selector="Button">
      <Setter Property="IsVisible" x:DataType="avaloniaBugs:MainWindow">
        <Setter.Value>
          <MultiBinding Converter="{x:Static BoolConverters.And}" x:DataType="avaloniaBugs:MainWindow">
            <CompiledBinding Path="IsA" />
            <CompiledBinding Path="IsB" />
          </MultiBinding>
        </Setter.Value>
      </Setter>
    </Style>
  </Window.Styles>
  <Button></Button>
</Window>
